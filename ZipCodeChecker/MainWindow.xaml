<Window x:Class="ZipCodeChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZipCodeChecker"
        mc:Ignorable="d"
        Title="Zip Code" Height="120" Width="200">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="Enter your ZIP code:"/>
        <TextBox x:Name="uxZipCodeTextBox" Background="LightGoldenrodYellow" TextChanged="uxZipCodeTextBox_TextChanged" FontWeight="Bold"/>
        <Button x:Name="uxSubmitButton" Content="Submit" IsEnabled="False" Click="uxSubmitButton_Click"/>
    </StackPanel>
</Window>
