<Window x:Class="HelloWorld.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="SecondWindow" Height="300" Width="300">
    <Grid>
        <ListView x:Name="uxList" ItemsSource="{Binding Source= users}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Header="User Name" Width="100"/>
                    <GridViewColumn DisplayMemberBinding= "{Binding Path=Password}" Header="Password" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
